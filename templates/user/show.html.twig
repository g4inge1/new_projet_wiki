{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-4xl font-bold mb-6 text-blue-800 text-center p-2 bg-blue-200 border border-blue-300 rounded-lg" style="box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.2);">Info utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.userName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
        </tbody>
    </table>

    <div class="flex items-center justify-center"> 

        <a href="{{ path('app_user_index') }}" class="btn btn-secondary ml-2 py-2 px-4">Retour Ã  la liste</a>

        <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary ml-2 py-2 px-4">Editer</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
