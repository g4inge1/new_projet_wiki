{% extends 'base.html.twig' %}

{% block body %}

    <style>
        body {
            background-color: #f5f5f5; /* Couleur de fond */
        }

        .form-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Hauteur de la vue */
            background-color: #333; /* Couleur de fond sombre */
        }

        .form-box {
            width: 80%;
            max-width: 600px; /* Largeur maximale de la boîte du formulaire */
            padding: 20px;
            background-color: #fff; /* Couleur de fond de la boîte du formulaire */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Ombre légère */
        }

        /* Ajoutez d'autres styles personnalisés au besoin */

        /* Styles spécifiques au formulaire */
        .form-box label {
            color: #707C8B; /* Couleur du texte */
            font-size: 15px;
            font-family: 'NotoSans', sans-serif;
        }

        .form-box input,
        .form-box textarea,
        .form-box select {
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 2px solid #B0A5A5; /* Couleur de la bordure */
            border-radius: 5px;
            background-color: transparent; /* Fond transparent */
            color: #333; /* Couleur du texte */
        }

        .form-box .bg-blue {
            background-color: #3498db; /* Couleur bleue */
            color: #fff; /* Couleur du texte en surbrillance */
        }

        .form-box .mt-8 {
            margin-top: 8px;
        }

        .form-box .ml-auto {
            margin-left: auto;
        }
    </style>

    <div class="form-container">
        <form method="post" class="form-box">

            {{ form_start(form) }}

            <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
            <script>
                tinymce.init({
                    selector: '#editor',
                    height: 400,
                    plugins: 'link image code',
                    toolbar: 'undo redo | bold italic | link image | code',
                });
            </script>

            <div class="box">
                <div class="box_col">
                    <!-- Ajoutez le reste de votre formulaire ici -->

                    <!-- Exemple avec le champ titre -->
                    <div>
                        <div class="Label ml-4 flex items-start gap-8 pl- bg-white rounded-6px">
                            <div class="Text text-color-707C8B text-15px font-NotoSans font-400 line-height-20.25px break-word">Titre</div>
                        </div>
                        {{ form_widget(form.titre, {'attr': {'class': 'h-16 bg-white border-2 border-color-707C8B rounded-lg', 'style': 'width: 515px;', 'id': 'title'}}) }}
                    </div>

                    <!-- Autres champs du formulaire -->

                    <!-- Exemple avec le champ description -->
                    <div class="mt-100">
                        <div class="pt-12">
                            <div class="w-60 h-6 bg-white ml-4 pb-4">
                                <label for="des" class=" left-14 top-0 text-color-707C8B text-15px font-NotoSans font-400 line-height-20.25px break-word">Description</label>
                            </div>
                            {{ form_widget(form.description, {'attr': {'class': 'w-512 h-32 bg-transparent border-2 border-color-B0A5A5 rounded-lg', 'style': 'width: 515px;', 'id': 'des'}}) }}
                        </div>
                    </div>
                </div>

                <!-- Sélection déroulante -->
                <select id="maListeDeroulante" style="width: 300px;" class="h-16  ml-80">
                    <option value="selected">Choisir une catégorie</option>
                    {% for c in actuelle_categories %}
                        <option value="{{ c.id }}">{{ c.nom }}</option>
                    {% endfor %}
                </select>
            </div>

            <!-- Champ Contenu -->
            <div class="mt-100">
                <div class="pt-12">
                    <div class="w-60 h-6 bg-white ml-4 pb-4">
                        <label for="des" class=" left-14 top-0 text-color-707C8B text-15px font-NotoSans font-400 line-height-20.25px break-word">Contenu</label>
                    </div>
                    {{ form_widget(form.contenu, {'attr': {'class': 'w-512 h-32 bg-transparent border-2 border-color-B0A5A5 rounded-lg', 'style': 'width: 515px;', 'id': 'des'}}) }}
                </div>
            </div>

            <!-- Bouton Enregistrer -->
            <div class="flex mt-8">
                {{ form_widget(form.save, {'attr': {'class': 'h-42 bg-blue rounded-lg ml-96', 'style': 'width:434px'}}) }}
                <div class="ml-36">
                    <div>
                        <label id="auteur" name="auteur" class="text-color-707C8B">{{ app.user.userIdentifier }}</label>
                        <button>{{ app.user.userIdentifier }}aaa</button>
                    </div>
                    <div>
                        <label class="text-color-707C8B">{{ "now"|date("Y-m-d") }}</label>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}

        </form>
    </div>

{% endblock %}
