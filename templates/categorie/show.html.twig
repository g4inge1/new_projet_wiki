{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <div style="text-align: center; padding: 20px;">
        <h1 style="border: 1px solid #000; display: inline-block; padding: 10px;">Categorie</h1>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-secondary">Edit</a>
    <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">Back to list</a>

{% endblock %}
